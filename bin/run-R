#!/usr/bin/env bash

BASE="$(readlink -f $(readlink -f $(dirname "${BASH_SOURCE}")/..))"

#---------------------------------------------------------------
# main
#---------------------------------------------------------------

script=$1; shift

if ! [[ -f $script ]]; then
  echo "$(basename $0): Script '$script' does not exist." 1>&2
  exit 1
fi

module load apps/R/${R_VERSION:-3.2.3}

R --slave --quiet --no-restore --no-save --args "$@" < ${script}

exit $?
